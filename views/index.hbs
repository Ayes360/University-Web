<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>University Website Main</title>
</head>
<body>
    {{>header data = details}}

    {{>herosection herosections = herosections}}

    <!--Services Section-->
    <section class="text-gray-600 body-font">
        <div class="container px-5 py-20 mx-auto">
          <div class="flex flex-wrap -m-4">
            <div class="flex flex-col text-center w-full mb-20">
                <h1 class="text-2xl font-medium title-font mb-4 text-gray-900 tracking-widest">Air University Available Courses</h1>
              </div>
            {{#each service}}
            <div class="lg:w-1/4 md:w-1/2 p-4 w-full">
              <a class="block relative h-48 rounded overflow-hidden">
                <img alt="ecommerce" class="object-cover object-center w-full h-full block" src="{{this.imageURL}}">
              </a>
              <div class="mt-4">
                <h2 class="text-gray-900 title-font text-lg font-medium ">{{this.serviceName}}</h2>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </section>

      <!--Academics Section-->
         <section class="text-gray-600 body-font">
        <div class="container px-5 py-20 mx-auto">
          <div class="flex flex-col text-center w-full mb-20">
            <h1 class="text-2xl font-medium title-font mb-4 text-gray-900">Air University Academics</h1>
          </div>
          <div class="flex flex-wrap -m-4">
            {{#each academic}}
            <div class="p-4 lg:w-1/3 md:w-1/2">
              <div class="h-full flex flex-col items-center text-center">
                <img alt="team" class="flex-shrink-0 rounded-lg w-full h-56 object-cover object-center mb-4" src="{{this.imageURL}}">
                <div class="w-full">
                  <h2 class="title-font font-medium text-lg text-gray-900">{{this.program}}</h2>
                  <h3 class="text-gray-500 mb-3">{{this.enroll}}</h3>
                  <p class="mb-4 text-justify">{{this.description}}</p>
                  <button class="inline-flex items-center border border-gray-400 py-2 px-4 focus:outline-none hover:bg-gray-200 rounded-lg text-base mt-4 md:mt-0 mr-4">View Details
                    <path d="M5 12h14M12 5l7 7-7 7"></path>  
                  </button>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </section>

    <!--Campus-->
    <section class="text-gray-600 body-font">
        <div class="container px-5 py-20 mx-auto">
          <div class="flex flex-col text-center w-full mb-20">
            <h1 class="text-2xl font-medium title-font mb-4 text-gray-900 tracking-widest">Air University Campuses</h1>
          </div>
          <div class="flex flex-wrap -m-4">
           {{#each Campus}}
            <div class="p-4 lg:w-1/2">
              <div class="h-full flex sm:flex-row flex-col items-center sm:justify-start justify-center text-center sm:text-left">
                <img alt="team" class="flex-shrink-0 rounded-lg w-48 h-48 object-cover object-center sm:mb-0 mb-4" src="{{this.imageURL}}">
                <div class="flex-grow sm:pl-8">
                  <h2 class="title-font font-medium text-lg text-gray-900">{{this.program}}</h2>
                  <h3 class="text-gray-500 mb-3">{{this.enroll}}</h3>
                  <p class="mb-4 text-justify">{{this.description}}</p>
               
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </section>
      <!--Teacher-->

      {{#each Teacher}}
      <section class="text-gray-600 body-font">
        <div class="container px-5 py-20 mx-auto">
          <div class="xl:w-1/2 lg:w-3/4 w-full mx-auto text-center">
            <svg xmlns="{{this.icon}}" fill="currentColor" class="inline-block w-8 h-8 text-gray-400 mb-8" viewBox="0 0 975.036 975.036">
              <path d="M925.036 57.197h-304c-27.6 0-50 22.4-50 50v304c0 27.601 22.4 50 50 50h145.5c-1.9 79.601-20.4 143.3-55.4 191.2-27.6 37.8-69.399 69.1-125.3 93.8-25.7 11.3-36.8 41.7-24.8 67.101l36 76c11.6 24.399 40.3 35.1 65.1 24.399 66.2-28.6 122.101-64.8 167.7-108.8 55.601-53.7 93.7-114.3 114.3-181.9 20.601-67.6 30.9-159.8 30.9-276.8v-239c0-27.599-22.401-50-50-50zM106.036 913.497c65.4-28.5 121-64.699 166.9-108.6 56.1-53.7 94.4-114.1 115-181.2 20.6-67.1 30.899-159.6 30.899-277.5v-239c0-27.6-22.399-50-50-50h-304c-27.6 0-50 22.4-50 50v304c0 27.601 22.4 50 50 50h145.5c-1.9 79.601-20.4 143.3-55.4 191.2-27.6 37.8-69.4 69.1-125.3 93.8-25.7 11.3-36.8 41.7-24.8 67.101l35.9 75.8c11.601 24.399 40.501 35.2 65.301 24.399z"></path>
            </svg>
            <p class="leading-relaxed text-lg text-justify">{{this.description}}</p>
            <span class="inline-block h-1 w-10 rounded bg-blue-900 mt-8 mb-6"></span>
            <h2 class="text-gray-900 font-medium title-font tracking-wider text-sm">{{this.tag}}</h2>
            <p class="text-gray-500">{{this.teacherName}}</p>
          </div>
        </div>
      </section>
      {{/each}}
      <!--Visual Data-->
    <section class="text-gray-600 body-font">
        <div class="container px-5 py-20 mx-auto">
          <div class="flex flex-wrap -m-4 text-center">
            {{#each vdata}}
            <div class="p-4 sm:w-1/4 w-1/2">
              <h2 class="title-font font-medium sm:text-4xl text-3xl text-gray-900">{{this.amount}}</h2>
              <p class="leading-relaxed">{{this.name}}</p>
            </div>
            {{/each}}
          </div>
        </div>
      </section>

    {{>footer}}

</body>
</html>